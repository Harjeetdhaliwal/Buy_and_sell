<header>
  <nav class="navbar navbar-expand-lg">

    <div class="container-fluid">
      <a class="navbar-brand" href="/products"><i class="fas fa-store-alt">Lightjiji</i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <form class="row form-inline" action="/products" method="get">
          <div class="col">
            <input class="form-control" name="q" type="search" placeholder="What are you looking for?" aria-label="Search"
                value="<%= locals.searchTerm || '' %>">

          </div>
          <div class="col">
            <button class="btn btn-success" type="submit">Search</button>
          </div>
        </form>

        <div class="navbar-nav ms-auto">
          <% if (!user) { %>
            <a class="nav-item nav-link" href="/login/1">Login</a>
            <a class="nav-item nav-link" href="/register">Register</a>
            <%} else { %>

            <a class="nav-item nav-link" href="/myListings">Listings</a>
            <a class="nav-item nav-link" href="/favourites"><i class="fas fa-heart"></i></a>
            <a class="nav-item nav-link" href="/messages"><i class="far fa-envelope"></i></a>
          <form class="form-inline" method="GET" action="/logout">

            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>
